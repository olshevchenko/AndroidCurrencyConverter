<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.ol.currconverter.MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textviewHeaderOps"
        android:id="@+id/tvHeaderOps"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvHeaderOps"
        android:layout_above="@+id/btClearAll"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/vertical_cloth_transp90"
        android:divider="@color/v_conv_divider"
        android:dividerHeight="2dp"
        android:longClickable="true"
        android:id="@+id/lvUserOpsHistory"/>

    <Button
        android:layout_alignParentBottom="true"
        style="@style/CustomConverterButton"
        android:text="@string/buttonClearAll"
        android:drawableRight="@drawable/ic_clear_white_36dp"
        android:id="@+id/btClearAll"/>
</RelativeLayout>
